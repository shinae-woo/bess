# Dummy L2 tunneling example with ethertype 0x9999

import scapy.all as scapy

eth = scapy.Ether(dst='00:02:15:37:a2:44', src='00:ae:f3:52:aa:d1')
ip = scapy.IP()
udp = scapy.UDP()
payload = 'Hello World'

test_packet = bytearray(str(eth/ip/udp/payload))

Source() \
        -> SetMetadata(name='ether_type', size=2, value=0x9999) \
        -> Rewrite([test_packet]) \
        -> GenericEncap(fields=[ \
            {'size': 6, 'value': 0x020000000001},
            {'size': 6, 'value': 0x0619deadbeef},
            {'size': 2, 'name': 'ether_type'}]) \
        -> Sink()
